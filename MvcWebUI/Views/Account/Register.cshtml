@using BusinessLayer.ViewModels.KullaniciVM;

@{
    ViewData["Title"] = "Kayıt Ol";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}
@model UserCreateVM
<div class="row mt-5">
    <div class="col-12">
        <form class="form-group" method="post" asp-action="Register" asp-controller="Account">
            <div class="row mb-3">
                <label asp-for="Name" class="col-2 col-form-label">İsim</label>
                <div class="col-5">
                    <input type="text" class="form-control" asp-for="Name">
                </div>
                <span asp-validation-for="Name" class="text text-danger fw-bold"></span>
            </div>
            <div class="row mb-3">
                <label asp-for="SurName" class="col-2 col-form-label">Soyad</label>
                <div class="col-5">
                    <input type="text" class="form-control" asp-for="SurName">
                </div>
                <span asp-validation-for="SurName" class="text text-danger fw-bold"></span>
            </div>
            <div class="row mb-3">
                <label asp-for="UserName" class="col-2 col-form-label">Kullanıcı Adı</label>
                <div class="col-5">
                    <input type="text" class="form-control" asp-for="UserName">
                </div>
                <span asp-validation-for="UserName" class="text text-danger fw-bold"></span>
            </div>
            <div class="row mb-3">
                <label asp-for="BirthDate" class="col-2 col-form-label">Doğum Tarihi</label>
                <div class="col-5">
                    <input class="form-control" asp-for="BirthDate">
                </div>
                <span asp-validation-for="BirthDate" class="text text-danger fw-bold"></span>
            </div>
            <div class="row mb-3">
                <label asp-for="Password" class="col-2 col-form-label"></label>
                <div class="col-5">
                    <input asp-for="Password" class="form-control password" />
                <span asp-validation-for="Password" class="text text-danger fw-bold"></span>
                </div>                                                                        
                <div class="col-5">
                    <a id="showhidepassword" href="" title="Show / Hide Password"><i class="far fa-eye"></i></a>
                </div>
            </div>
            <div class="row mb-3">
                <label asp-for="RePassword" class="col-2 col-form-label"></label>
                <div class="col-5">
                    <input asp-for="RePassword" class="form-control" />
                </div>
                <span asp-validation-for="RePassword" class="text text-danger fw-bold"></span>

            </div>
            <div class="row mb-3">
                <label asp-for="Gender" class="col-2 col-form-label"></label>
                <div class="col-5 divsex">
                    <input asp-for="Gender" type="radio" id="Kadın" value="1" checked />
                    <label asp-for="Gender" for="Kadın">Kadın</label>
                    <input asp-for="Gender" type="radio" id="Erkek" value="2" />
                    <label asp-for="Gender" for="Erkek">Erkek</label>
                </div>
                <span asp-validation-for="Gender" class="text text-danger fw-bold"></span>
            </div>

            <div class="row mb-3">
                <div class="offset-2 col-5">
                    <button type="submit" class="btn btn-primary">Kayıt Ol</button>
                    <button type="reset" class="btn btn-outline-danger">Reset</button>
                    <a asp-controller="Account" asp-action="Login" class="btn btn-secondary">Giris Yap</a>
                </div>
            </div>
        </form>
        <div asp-validation-summary="All" class="text text-danger fw-bold"></div>
    </div>
</div>

@section Scripts{
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

    <script>
        $(function () {
            

            var showPassword = false;
            $(document).off('click', '#showhidepassword');
            $(document).on('click', '#showhidepassword', function (event) {
                event.preventDefault();
                showPassword = !showPassword;
                if (showPassword)
                    $(".password").prop("type", "text");
                else
                    $(".password").prop("type", "password");
            });
        });
    </script>

}

